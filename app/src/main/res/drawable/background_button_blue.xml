<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/theme_blue" android:state_pressed="true">
        <shape>
            <stroke android:width="1dip" android:color="@color/theme_blue" />
            <solid android:color="@color/theme_blue_un_select" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dip" android:color="@color/theme_blue" />
            <corners android:radius="4dp" />
            <solid android:color="@color/theme_blue" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:endColor="@color/theme_blue" android:startColor="@color/theme_blue" />
            <stroke android:width="1dip" android:color="@color/theme_blue" />
            <solid android:color="@color/theme_blue" />
            <corners android:radius="4dip" />
        </shape>
    </item>
</selector>