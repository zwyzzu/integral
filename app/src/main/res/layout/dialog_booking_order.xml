<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_disclaimer">

    <TextView
        android:id="@+id/bookingOrderTitle"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:text="@string/booking_order_label"
        android:textSize="@dimen/widget_fontSize_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookingOrderTitle" />

    <Button
        android:id="@+id/bookingOrderUnAgreed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:background="@drawable/background_button_red"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bookingOrderAgreed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bookingOrderAgreed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bookingOrderAgreed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_8"
        android:background="@drawable/background_button_blue"
        android:text="@string/immediate_order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bookingOrderUnAgreed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/bookingOrderUnAgreed" />

    <TextView
        android:id="@+id/bookingOrderBookers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:text="@string/booking_order_bookers"
        android:textSize="@dimen/widget_fontSize_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookingOrderTitle" />

    <TextView
        android:id="@+id/bookingOrderCreateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:text="@string/booking_order_time"
        android:textSize="@dimen/widget_fontSize_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookingOrderBookers" />

    <TextView
        android:id="@+id/bookingOrderAddress"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_8"
        android:text="@string/booking_order_address"
        android:textSize="@dimen/widget_fontSize_14"
        app:layout_constraintBottom_toBottomOf="@+id/bookingOrderAddressValue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookingOrderCreateTime" />

    <TextView
        android:id="@+id/bookingOrderDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:text="@string/description"
        android:textSize="@dimen/widget_fontSize_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookingOrderAddress" />

    <TextView
        android:id="@+id/bookingOrderCreateTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:text="@string/booking_order_time"
        android:textSize="@dimen/widget_fontSize_14"
        app:layout_constraintLeft_toRightOf="@id/bookingOrderCreateTime"
        app:layout_constraintStart_toEndOf="@id/bookingOrderCreateTime"
        app:layout_constraintTop_toTopOf="@id/bookingOrderCreateTime" />

    <TextView
        android:id="@+id/bookingOrderBookersValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:text="@string/booking_order_bookers"
        android:textSize="@dimen/widget_fontSize_14"
        app:layout_constraintLeft_toLeftOf="@id/bookingOrderCreateTimeValue"
        app:layout_constraintStart_toStartOf="@id/bookingOrderCreateTimeValue"
        app:layout_constraintTop_toTopOf="@id/bookingOrderBookers" />

    <TextView
        android:id="@+id/bookingOrderAddressValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:text="@string/booking_order_address"
        android:textSize="@dimen/widget_fontSize_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/bookingOrderCreateTimeValue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/bookingOrderCreateTimeValue"
        app:layout_constraintTop_toTopOf="@id/bookingOrderAddress" />

    <TextView
        android:id="@+id/bookingOrderDescriptionValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_16"
        android:gravity="start|top"
        android:maxLines="3"
        android:text="@string/description"
        android:textSize="@dimen/widget_fontSize_14"
        app:layout_constraintBottom_toTopOf="@id/bookingOrderUnAgreed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/bookingOrderCreateTimeValue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/bookingOrderCreateTimeValue"
        app:layout_constraintTop_toTopOf="@id/bookingOrderDescription" />
</android.support.constraint.ConstraintLayout>