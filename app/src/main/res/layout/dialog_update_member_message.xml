<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/updateMemberTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:text="@string/member_update_message"
        android:textSize="@dimen/widget_fontSize_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@id/updateMemberTitle"
        app:layout_constraintLeft_toLeftOf="@id/updateMemberTitle"
        app:layout_constraintRight_toRightOf="@id/updateMemberTitle"
        app:layout_constraintStart_toStartOf="@id/updateMemberTitle"
        app:layout_constraintTop_toBottomOf="@id/updateMemberTitle" />

    <EditText
        android:id="@+id/updateMemberMessage"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:layout_margin="@dimen/margin_16"
        android:background="@drawable/background_input_rectangle"
        android:gravity="start"
        android:lines="5"
        android:padding="@dimen/padding_4"
        android:textSize="@dimen/widget_fontSize_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateMemberTitle"
        tools:ignore="Autofill,LabelFor,TextFields" />
</android.support.constraint.ConstraintLayout>