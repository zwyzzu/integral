<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BookingInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bookingInfoToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_bar"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/icon_widget_back"
        tools:ignore="UnusedAttribute">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/booking_info_label" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/bookingInfoMemberHead"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_16"
        android:paddingLeft="@dimen/padding_16"
        android:paddingEnd="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16"
        android:text="@string/booking_member"
        android:textColor="@color/black"
        android:textSize="@dimen/widget_fontSize_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookingInfoToolbar" />

    <TextView
        android:id="@+id/bookingInfoAddressHead"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_16"
        android:paddingLeft="@dimen/padding_16"
        android:paddingEnd="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16"
        android:text="@string/booking_address"
        android:textColor="@color/black"
        android:textSize="@dimen/widget_fontSize_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookingInfoMemberHead" />

    <TextView
        android:id="@+id/bookingInfoCommodityHead"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_16"
        android:paddingLeft="@dimen/padding_16"
        android:paddingEnd="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16"
        android:text="@string/booking_commodity"
        android:textColor="@color/black"
        android:textSize="@dimen/widget_fontSize_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookingInfoAddressHead" />

    <TextView
        android:id="@+id/bookingInfoMessageHead"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:background="@color/white"
        android:gravity="start"
        android:paddingStart="@dimen/padding_16"
        android:paddingLeft="@dimen/padding_16"
        android:paddingTop="@dimen/padding_14"
        android:paddingEnd="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16"
        android:paddingBottom="@dimen/padding_14"
        android:text="@string/booking_message"
        android:textColor="@color/black"
        android:textSize="@dimen/widget_fontSize_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookingInfoCommodityHead" />

    <TextView
        android:id="@+id/bookingInfoMessage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="start"
        android:hint="@string/booking_message_hint"
        android:lines="3"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="@dimen/padding_14"
        android:paddingEnd="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16"
        android:paddingBottom="@dimen/padding_14"
        android:textSize="@dimen/widget_fontSize_16"
        app:layout_constraintBottom_toBottomOf="@id/bookingInfoMessageHead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bookingInfoMessageHead"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/bookingInfoMessageHead"
        app:layout_constraintTop_toTopOf="@id/bookingInfoMessageHead"
        tools:ignore="Autofill,TextFields" />

    <TextView
        android:id="@+id/bookingInfoMember"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16"
        android:text="@string/booking_member"
        android:textColor="@color/black"
        android:textSize="@dimen/widget_fontSize_16"
        app:layout_constraintBottom_toBottomOf="@id/bookingInfoMemberHead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/bookingInfoMessage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/bookingInfoMessage"
        app:layout_constraintTop_toTopOf="@id/bookingInfoMemberHead" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="@id/bookingInfoMemberHead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/bookingInfoAddressHome"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="@id/bookingInfoAddressHead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/bookingInfoMessage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/bookingInfoMessage"
        app:layout_constraintTop_toTopOf="@id/bookingInfoAddressHead" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="@id/bookingInfoAddressHead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bookingInfoCommodityCount"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:gravity="center"
        android:textSize="@dimen/widget_fontSize_14"
        app:layout_constraintBottom_toBottomOf="@id/bookingInfoCommodityHead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/bookingInfoCommodityHead" />

    <FrameLayout
        android:id="@+id/bookingInfoCommodityHome"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="@id/bookingInfoCommodityHead"
        app:layout_constraintEnd_toStartOf="@id/bookingInfoCommodityCount"
        app:layout_constraintLeft_toLeftOf="@id/bookingInfoMessage"
        app:layout_constraintRight_toLeftOf="@id/bookingInfoCommodityCount"
        app:layout_constraintStart_toStartOf="@id/bookingInfoMessage"
        app:layout_constraintTop_toTopOf="@id/bookingInfoCommodityHead" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="@id/bookingInfoCommodityHead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bookingInfoInvalid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:background="@drawable/background_button_red"
        android:text="@string/immediate_invalid"
        app:layout_constraintEnd_toStartOf="@+id/bookingInfoOrder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bookingInfoOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookingInfoMessage" />

    <Button
        android:id="@+id/bookingInfoOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:background="@drawable/background_button_blue"
        android:text="@string/immediate_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bookingInfoInvalid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/bookingInfoInvalid"
        app:layout_constraintTop_toBottomOf="@id/bookingInfoMessage" />
</android.support.constraint.ConstraintLayout>