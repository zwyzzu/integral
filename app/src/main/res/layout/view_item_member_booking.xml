<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/itemMemberBookingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginLeft="@dimen/margin_4"
        android:layout_marginEnd="@dimen/margin_4"
        android:layout_marginRight="@dimen/margin_4"
        android:gravity="center"
        android:text="@string/number"
        android:textSize="@dimen/widget_fontSize_13"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/itemMemberBookingMark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemMemberBookingText" />

    <TextView
        android:id="@+id/itemMemberBookingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginLeft="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginEnd="@dimen/margin_4"
        android:layout_marginRight="@dimen/margin_4"
        android:gravity="start"
        android:lines="1"
        android:singleLine="true"
        android:text="@string/booking"
        android:textSize="@dimen/widget_fontSize_14"
        app:layout_constraintEnd_toStartOf="@id/itemMemberBookingNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/itemMemberBookingNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemMemberBookingAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:text="@string/booking"
        android:textSize="@dimen/widget_fontSize_14"
        android:layout_marginEnd="@dimen/margin_4"
        android:layout_marginRight="@dimen/margin_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/itemMemberBookingText"
        app:layout_constraintStart_toStartOf="@id/itemMemberBookingText"
        app:layout_constraintTop_toBottomOf="@id/itemMemberBookingText" />

    <TextView
        android:id="@+id/itemMemberBookingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:text="@string/booking"
        android:textSize="@dimen/widget_fontSize_13"
        app:layout_constraintLeft_toLeftOf="@id/itemMemberBookingText"
        app:layout_constraintStart_toStartOf="@id/itemMemberBookingText"
        app:layout_constraintTop_toBottomOf="@id/itemMemberBookingAddress" />

    <TextView
        android:id="@+id/itemMemberBookingOrder"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="@dimen/margin_4"
        android:layout_marginRight="@dimen/margin_4"
        android:layout_marginBottom="@dimen/margin_8"
        android:background="@drawable/background_button_use_coupons"
        android:gravity="center"
        android:text="@string/immediate_order"
        android:textSize="@dimen/widget_fontSize_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/itemMemberBookingMark"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/booking"
        android:src="@mipmap/icon_ordered"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/margin_4"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemMemberBookingTime" />
</android.support.constraint.ConstraintLayout>