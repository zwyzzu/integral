<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="47dip"
    android:background="@drawable/background_mine_item"
    android:paddingTop="@dimen/padding_4">

    <View
        android:id="@+id/mineItemDivision"
        android:layout_width="0dp"
        android:layout_height="1dip"
        android:layout_marginTop="@dimen/padding_4"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mineItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:src="@mipmap/icon_next"
        app:layout_constraintBottom_toTopOf="@id/mineItemDivision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/mineItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/mine_integral"
        android:textColor="@color/black"
        android:textSize="@dimen/widget_fontSize_15"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/mineItemIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mineItemIcon" />

</android.support.constraint.ConstraintLayout>